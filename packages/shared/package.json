{
  "name": "@repo/shared",
  "version": "1.0.0",
  "private": true,
  "exports": {
    ".": "./src/index.ts",
    "./models": "./src/types/models.ts",
    "./dto": "./src/types/dto/index.ts",
    "./services": "./src/services/index.ts",
    "./transformers": "./src/transformers/index.ts",
    "./libs": "./src/libs/index.ts"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "prisma:generate": "npx prisma generate",
    "prisma:format": "npx prisma format",
    "dev": "npm run test:watch",
    "dev:test": "concurrently \"npm run test:watch\" \"npm run test:coverage -- --watchAll\"",
    "db:check": "ts-node src/scripts/check-data.ts",
    "db:check:build": "tsc src/scripts/check-data.ts --outDir dist --esModuleInterop --skipLibCheck && node dist/scripts/check-data.js",
    "db:import": "ts-node src/scripts/import.department-device-types.ts",
    "db:import:build": "npx tsc src/scripts/import.department-device-types.ts --outDir dist --esModuleInterop --skipLibCheck && node dist/scripts/import.department-device-types.js",
    "admin:create": "ts-node src/scripts/create.admin.ts",
    "admin:create:build": "npx tsc src/scripts/create.admin.ts --outDir dist --esModuleInterop --skipLibCheck && node dist/scripts/create.admin.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:services": "jest src/__tests__/services/**/*.test.ts",
    "test:transformers": "jest src/__tests__/transformers/**/*.test.ts",
    "test:integration": "jest src/__tests__/integration/**/*.test.ts",
    "test:basic": "jest src/__tests__/basic.test.ts",
    "test:admin": "jest src/__tests__/services/admin.service.test.ts",
    "test:user": "jest src/__tests__/services/user.service.test.ts",
    "test:company": "jest src/__tests__/services/company.service.test.ts",
    "test:device": "jest src/__tests__/services/device.service.test.ts",
    "test:product": "jest src/__tests__/services/product.service.test.ts",
    "test:sale": "jest src/__tests__/services/sale.service.test.ts",
    "test:service-manager": "jest src/__tests__/services/service.manager.test.ts",
    "test:admin-transformer": "jest src/__tests__/transformers/admin.transformer.test.ts",
    "test:nextjs": "jest src/__tests__/integration/nextjs.test.ts",
    "build": "tsc"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@prisma/client": "^6.4.1",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bcryptjs": "^2.4.6",
    "@types/eslint": "^8.56.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.24",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "prisma": "^6.4.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3"
  }
}
